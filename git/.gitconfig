# Git configuration template
# Note: user.name and user.email are set by git/setup.sh

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

[core]
	editor = vim
	pager = delta

[url "git@github.com:"]
	insteadOf = https://github.com/

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	features = weeping-willow

[merge]
	conflictStyle = zdiff3

[include]
	path = ~/.config/delta/themes.gitconfig
